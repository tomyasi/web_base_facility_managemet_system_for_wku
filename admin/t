
    $sql1 = "select * from account where username= $username";
    if (mysqli_query($con, $sql1) <= 0) {
        $qur = "insert into account values(NULL,NULL,'$username','$password','$role','$status',NULL);";
        mysqli_query($con, $qur);
?>
